<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/superstar_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        tools:srcCompat="@tools:sample/avatars"
        android:paddingTop="12dp"
        android:paddingHorizontal="12dp"/>

    <TextView
        android:id="@+id/superstar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/superstar_name"
        android:layout_marginTop="28dp"
        android:textSize="20sp"
        android:layout_toRightOf="@id/superstar_image"
        android:layout_toEndOf="@id/superstar_image" />

    <TextView
        android:id="@+id/superstar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/superstar_title"
        android:textSize="7pt"
        android:layout_below="@id/superstar_name"
        android:layout_toRightOf="@id/superstar_image"
        android:layout_toEndOf="@id/superstar_image" />

</RelativeLayout>
